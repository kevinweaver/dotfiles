# pane0:top |  pane1:bottom-left | pane2:bottom-mid | pane3: bottom-right
# select first pane -- only one if empty
rename-window Dev
select-pane -t 0
# split horizontally by 90%
split-window -v -p 10
select-pane -t 0
split-window -h -p 15
# select bottom pane and split vertically by 33%
select-pane -t 2
split-window -h -p 75
# select larger bottom pane and split in half - yielding 3 1/3 chunks
#select-pane -t 3
#split-window -h -p 66

# run commands
send -t 0 work ENTER
send -t 0 clear ENTER
send -t 1 work ENTER
send -t 1 clear ENTER
send -t 2 kufak ENTER
send -t 2 'invoke' ENTER
#send -t 1 'postgres -D ./pg_db' ENTER
send -t 3 work ENTER
send -t 3 clear ENTER

select-pane -t 0

new-window -n 'Extra'

select-window -t 1
